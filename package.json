{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfbx9da4/deep-email-validator-express"
  },
  "author": "David Alberto Adler",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "yarn watch-node",
    "watch-node": "nodemon dist/index.js",
    "test": "jest --verbose",
    "build": "tsc -v && tsc ",
    "watch-test": "yarn test -- --watchAll",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn build && yarn watch-debug",
    "run-debug": "nodemon --inspect dist/server.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "deep-email-validator": "^0.1.12",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "forever": "^2.0.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.141",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.2",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1"
  }
}
